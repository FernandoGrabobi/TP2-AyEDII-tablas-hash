package CASASALCARRIA;
import java.util.Scanner;


public class Ejercicio12 {

    // Metodos
    public static void clearScreen() {
        System.out.print("\033[H\033[2J");
        System.out.flush();
    }


    public static void main(String[] args) {

        Scanner input = new Scanner(System.in);
        tablaDeDispersion tabla = new tablaDeDispersion();
        int opcionesMenu = 0;
        String clave;
        
       
        do {
            try {
                System.out.println("Presione 1 para  \n");
                System.out.println("Presione 2 para  \n");
                System.out.println("Presione 3 para  \n");
                System.out.println("Presione 0 para salir del programa \n");
                opcionesMenu = input.nextInt();
                input.nextLine();

            } catch (Exception e) {
                System.out.println("Ingreso un valor no valido\n");
            }

            switch (opcionesMenu) {
                case 1:// insertar

                    clearScreen();
                    try {

                        casaRural casaInsertar = new casaRural();
                        tabla.insertar(casaInsertar);

                    } catch (Exception e) {
                        System.out.println("Ingreso un valor no valido\n");
                    }


                break;
                case 2:// buscar y modificar
                    clearScreen();
                    try {

                        System.out.print("Ingrese la clave de la casa que desea Buscar \n");
                        clave = input.nextLine();
                        tabla.buscar(clave).muestra();
                    
               
                    } catch (Exception e) {
                        System.out.println("Ingreso un valor no valido\n");
                    }

                break;
                case 3:// eliminar
                    clearScreen();
                    try {

                        System.out.print("Ingrese la clave de la casa que desea Eliminar \n");
                        clave = input.nextLine();
                        tabla.eliminar(clave);

                    } catch (Exception e) {
                        System.out.println("Ingreso un valor no valido\n");
                    }

                break;
                case 0:
                    clearScreen();
                    System.out.println(" El programa a finalizado correctamente ");
                break;
                default:
                    clearScreen();
                    System.out.println(" \n Ingrese una opcion valida ");
                break;

            }

        } while (opcionesMenu != 0);

        input.close();
    }

}
